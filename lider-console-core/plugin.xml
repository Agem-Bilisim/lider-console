<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="tr.org.liderahenk.liderconsole.core.ActivationTriggerDummy">
      </startup>
   </extension>
   <extension-point id="tr.org.liderahenk.liderconsole.core.logger" name="%extension.point.logger" schema="schema/tr.org.liderahenk.liderconsole.core.logger.exsd"/>
   <extension-point id="tr.org.liderahenk.liderconsole.core.profilemenu" name="%extension.point.profile.menu" schema="schema/tr.org.liderahenk.liderconsole.core.profilemenu.exsd"/>
   <extension-point id="tr.org.liderahenk.liderconsole.core.policymenu" name="%extension.point.policy.menu" schema="schema/tr.org.liderahenk.liderconsole.core.policymenu.exsd"/>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml">
      </toc>
      <toc
            file="testToc.xml"
            primary="true">
      </toc>
   </extension>
      <extension
         point="org.eclipse.ui.commands">
    
      <category
            id="tr.org.liderahenk.liderconsole.commands.category"
            name="Lider">
      </category>  
      
      
      <command
            categoryId="tr.org.liderahenk.liderconsole.commands.category"
            id="tr.org.liderahenk.liderconsole.commands.LdapSearchEditor"            
            name="%editor.ldap.search">
      </command>
      <command
            categoryId="tr.org.liderahenk.liderconsole.commands.category"
            id="tr.org.liderahenk.liderconsole.core.commands.Policy"
            name="%policy.command">
      </command>  
      
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="tr.org.liderahenk.liderconsole.core.handlers.LdapSearchHandler"
            commandId="tr.org.liderahenk.liderconsole.commands.LdapSearchEditor">
      </handler>
	   <handler
	         class="tr.org.liderahenk.liderconsole.core.handlers.PolicyHandler"
	         commandId="tr.org.liderahenk.liderconsole.core.commands.Policy">
	      <enabledWhen>
	         <and>
	            <with
	                  variable="tr.org.liderahenk.liderconsole.core.sourceproviders.main.available">
	            </with>
	            <with
	                  variable="tr.org.liderahenk.liderconsole.core.sourceproviders.main.isAhenkSelected">
	            </with>
	         </and>
	      </enabledWhen>
	   </handler>    
   </extension> 
   
   <extension
         point="org.eclipse.ui.menus">
       <menuContribution
            locationURI="popup:org.apache.directory.studio.ldapbrowser.ui.views.browser.BrowserView?after=additions">
            <command
                  commandId="tr.org.liderahenk.liderconsole.commands.LdapSearchEditor"
                  id="tr.org.liderahenk.liderconsole.commands.LdapSearchEditor"
                  icon="icons/16/ldap.png"
                  tooltip="%command.tooltip.ldap.search.editor">
            </command>
      </menuContribution>
  </extension>
   
   <extension
         point="org.eclipse.ui.menus">
       <menuContribution
            locationURI="popup:tr.org.liderahenk.liderconsole.menus.LiderPolicyPopup?after=additions">
            <command
                  commandId="tr.org.liderahenk.liderconsole.core.commands.Policy"
                  id="tr.org.liderahenk.liderconsole.commands.PolicyCommand"
                  icon="icons/16/send.png"
                  style="push">
               <visibleWhen>
                  <and>
                     <iterate
                           operator="or">
                        <or>
                           <with
                                 variable="tr.org.liderahenk.liderconsole.core.sourceproviders.main.isEntrySelected">
                              <equals
                                    value="true">
                              </equals>
                           </with>
                        </or>
                     </iterate>
                  </and>
               </visibleWhen>
            </command>
      </menuContribution>
  </extension>
   
   <extension
         point="org.apache.directory.studio.connectionlistener">
      <connectionListener
            class="tr.org.liderahenk.liderconsole.core.listeners.LdapConnectionListener"
            description="LDAP Connection Listener"
            id="tr.org.liderahenk.liderconsole.core.listeners.LdapConnectionListener"
            name="LDAP Connection Listener">
      </connectionListener>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="tr.org.liderahenk.liderconsole.menus.Lider"
               label="%menu.label"
               mnemonic="%menu.mnemonic">
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="tr.org.liderahenk.liderconsole.toolbars.Lider">
         </toolbar>
      </menuContribution>   
      <menuContribution
            locationURI="popup:org.apache.directory.studio.ldapbrowser.ui.views.browser.BrowserView">
         <!-- Use LiderTaskPopup if you have any task-related dialog/editor -->
         <menu
               id="tr.org.liderahenk.liderconsole.menus.LiderTaskPopup"
               label="%menu.label.task.popup"
               mnemonic="%menu.mnemonic.task.popup">
         </menu>
         <!-- Use LiderPolicyPopup for policy definition & execution dialogs -->
         <menu
               id="tr.org.liderahenk.liderconsole.menus.LiderPolicyPopup"
               label="%menu.label.policy.popup"
               mnemonic="%menu.mnemonic.policy.popup">
         </menu>
         <!-- Use LiderProfilePopup for profile definition & execution dialogs -->
         <menu
               id="tr.org.liderahenk.liderconsole.menus.LiderProfilePopup"
               label="%menu.label.profile.popup"
               mnemonic="%menu.mnemonic.profile.popup">
         </menu>
      </menuContribution>         
	</extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="tr.org.liderahenk.liderconsole.core.category"
            name="%category.name">
      </category>
      <view
            category="tr.org.liderahenk.liderconsole.core.category"
            class="tr.org.liderahenk.liderconsole.core.views.SystemLogsView"
            id="tr.org.liderahenk.liderconsole.core.views.SystemLogsView"
            name="%view.system.logs"
            icon="icons/32/log-book.png"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="tr.org.liderahenk.liderconsole.core.category"
            class="tr.org.liderahenk.liderconsole.core.views.ProfileMenuView"
            icon="icons/32/folder-open.png"
            id="tr.org.liderahenk.liderconsole.core.views.ProfileMenuView"
            name="%view.profile.menu"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="tr.org.liderahenk.liderconsole.core.category"
            class="tr.org.liderahenk.liderconsole.core.views.TaskOverview"
            icon="icons/32/task-play.png"
            id="tr.org.liderahenk.liderconsole.core.views.TaskOverview"
            name="%view.task.overview"
            restorable="true">
      </view>
   </extension>
   <extension
         point="tr.org.liderahenk.liderconsole.core.logger">
      <Logger
            class="tr.org.liderahenk.liderconsole.core.XmppLogger"
            description="%logger.xmpp.description"
            id="tr.org.liderahenk.liderconsole.core.XmppLogger"
            name="%logger.xmpp.name">
      </Logger>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="tr.org.liderahenk.liderconsole.core.sourceproviders.LiderSourceProvider">
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.available"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.isEntrySelected"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.isAhenkSelected"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.isUserSelected"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.isLdapUserSelected"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.privilegesForSelectedItem"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.selectedItem"
               priorityLevel="workbench">
         </variable>
         <variable
               name="tr.org.liderahenk.liderconsole.core.sourceproviders.main.selectedUser"
               priorityLevel="workbench">
         </variable>
	  </sourceProvider>
   </extension>
   <extension
         point="org.apache.directory.studio.valueeditors">
     <valueEditor
          class="tr.org.liderahenk.liderconsole.core.valueeditors.liderprivilege.LiderPrivilegeEditor"
          icon="resources/icons/imageeditor.gif"
          name="Lider Privilege Editor">
       <attribute attributeType="liderPrivilege"/>
    </valueEditor>
   </extension>	
	<extension
         point="org.eclipse.ui.preferencePages">
		<page
			class="tr.org.liderahenk.liderconsole.core.preferences.PreferencesPage"
            id="tr.org.liderahenk.liderconsole.core.preferencesPage"
            name="Lider Console Preferences">
		</page>
	</extension>
 <extension
       point="org.eclipse.ui.perspectiveExtensions">
    <perspectiveExtension
          targetID="tr.org.liderahenk.liderconsole.core.perspectives.MainPerspective">
       <view
             closeable="false"
             id="tr.org.liderahenk.liderconsole.core.views.ProfileMenuView"
             minimized="false"
             ratio="0.25"
             relationship="left"
             relative="org.eclipse.ui.editorss"
             showTitle="true"
             visible="true">
       </view>
       <view
             closeable="false"
             id="tr.org.liderahenk.liderconsole.core.views.TaskOverview"
             minimized="false"
             ratio="0.75"
             relationship="right"
             relative="org.eclipse.ui.editorss"
             showTitle="true"
             visible="true">
       </view>
    </perspectiveExtension>
      <perspectiveExtension
            targetID="org.apache.directory.studio.ldapbrowser.ui.perspective.BrowserPerspective">
         <view
               closeable="true"
               id="tr.org.liderahenk.liderconsole.core.views.xmpplogs.XmppLogsView"
               ratio="0.5"
               relationship="stack"
               relative="org.apache.directory.studio.ldapbrowser.ui.views.searchlogs.SearchLogsView"
               visible="true">
         </view>
         <view
               closeable="true"
               id="tr.org.liderahenk.liderconsole.core.views.SubBrowserView"
               ratio="0.5"
               relationship="stack"
               relative="org.apache.directory.studio.ldapbrowser.ui.views.connection.ConnectionView"
               visible="true">
         </view>         
      </perspectiveExtension>
 </extension>
<extension
	point="org.eclipse.ui.editors">
	<editor
       class="tr.org.liderahenk.liderconsole.core.editors.LdapSearchEditor"
       default="true"
       icon="icons/32/ldap.png"
       id="tr.org.liderahenk.liderconsole.core.editors.LdapSearchEditor"
       name="%editor.ldap.search">
	</editor>
</extension>

 <extension
       point="org.eclipse.ui.perspectives">
    <perspective
          class="tr.org.liderahenk.liderconsole.core.perspectives.MainPerspective"
          fixed="true"
          icon="icons/32/pardusAhenk.png"
          id="tr.org.liderahenk.liderconsole.core.perspectives.MainPerspective"
          name="%view.main.perspective">
    </perspective>
 </extension>
</plugin>
